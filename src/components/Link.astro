---
import type { HTMLAttributes } from "astro/types";

export type Props = {
  href: HTMLAttributes<"a">["href"];
  class?: string;
};

const { props } = Astro;
const prefix = import.meta.env.BASE_URL.slice(0, -1);
const href = props.href === "/" ? `${prefix}/` : `${prefix}${props.href}/`;
---

<a href={href} class={props.class}><slot /></a>
