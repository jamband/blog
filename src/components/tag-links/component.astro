---
import styles from "./styles.module.css";

type Props = {
  class?: string;
  tags: Array<string>;
};

const { class: className, tags } = Astro.props;
---

<ul class:list={[styles.container, className]}>
  {
    tags.map((tag) => (
      <li class={styles.tag}>
        <a href={`/blog/${tag}/`} class={styles.link}>
          <span class={styles.symbol}>{tag}</span>
        </a>
      </li>
    ))
  }
</ul>
