---
import Link from "./Link.astro";

export type Props = {
  class?: string;
  tags: Array<string>;
};

const { props } = Astro;
---

<ul
  class={`flex max-h-[10.5rem] flex-wrap gap-x-4 gap-y-5 overflow-y-scroll ${
    props.class || ""
  }`}
>
  {
    props.tags.map((tag) => (
      <li>
        <Link
          href={`/tags/${tag}`}
          class="rounded bg-gray-700 px-4 py-1.5 no-underline hover:text-gray-100 active:text-gray-100"
        >
          <span class="before:-mr-0.5 before:text-xs before:text-gray-400 before:content-['#']">
            {tag}
          </span>
        </Link>
      </li>
    ))
  }
</ul>
