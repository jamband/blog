---
type Props = {
  class?: string;
  tags: Array<string>;
};

const { class: className, tags } = Astro.props;
---

<ul
  class:list={[
    "flex max-h-40 flex-wrap gap-x-5 gap-y-6 overflow-y-scroll py-3 pb-8 md:max-h-60",
    "[mask-image:linear-gradient(to_top,#0000,#000_20%)]",
    className,
  ]}
>
  {
    tags.map((tag) => (
      <li class="pt-1">
        <a
          href={`/blog/${tag}/`}
          class="rounded bg-gray-700 px-4 py-2 no-underline hover:text-gray-100 active:text-gray-100"
        >
          <span class="before:-mr-0.5 before:text-xs before:text-gray-400 before:content-['#']">
            {tag}
          </span>
        </a>
      </li>
    ))
  }
</ul>
