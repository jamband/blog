---
import type { HTMLAttributes } from "astro/types";
import Link from "./Link.astro";

export type Props = {
  class: string;
  href: HTMLAttributes<"a">["href"];
};

const { props } = Astro;
---

<div class={props.class}>
  <Link
    href={props.href}
    class="rounded bg-gray-700 px-4 py-1 text-sm text-gray-400 no-underline hover:text-gray-100 active:text-gray-100 active:ring-2 active:ring-gray-400"
  >
    <slot />
  </Link>
</div>
