---
import IconUpRightFromSquare from "@/icons/IconUpRightFromSquare.astro";
import { dateFormat } from "@/utils/format";

type Props = {
  title: string;
  created_at: string;
  last_updated: string;
  historyUrl: string;
};

const { title, created_at, last_updated, historyUrl } = Astro.props;
---

<header class="mb-8">
  <h1 class="mb-12 text-center text-4xl">{title}</h1>
  <ul class="flex flex-col items-end text-sm text-gray-400">
    <li>作成日: {dateFormat(created_at)}</li>
    <li>
      <time datetime={last_updated}>最終更新日: {dateFormat(last_updated)}</time
      >
    </li>
    <li>
      <a
        href={historyUrl}
        class="group inline-flex items-center hover:text-pink-500"
        target="_blank"
        rel="noreferrer"
        >更新履歴<IconUpRightFromSquare
          class="ml-1 h-3.5 w-3.5 text-gray-400/70 group-hover:text-pink-500/70 group-active:text-pink-500/70"
        /></a
      >
    </li>
  </ul>
</header>
