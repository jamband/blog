---
import type { HTMLAttributes } from "astro/types";

export type Props = {
  viewBox: HTMLAttributes<"svg">["viewBox"];
  class: string;
};

const { props } = Astro;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox={props.viewBox}
  fill="currentColor"
  class={`inline-block ${props.class}`}
  role="img"
  aria-hidden={true}
>
  <slot />
</svg>
