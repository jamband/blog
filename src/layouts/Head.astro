---
import { APP_DESCRIPTION, APP_NAME } from "@/constants/app";
import "@/styles/app.css";

type Props = {
  title?: string;
  description?: string;
};

const { props, url } = Astro;

const title = props.title ? `${props.title} ï½¥ ${APP_NAME}` : APP_NAME;
const description = props.description ?? APP_DESCRIPTION;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta
    name="google-site-verification"
    content="6aK91se27OEvK0J9CLA7PvKK6qO7BkcncLYKFIQz8rY"
  />
  <meta name="description" content={description} />
  <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
  <title>{title}</title>
  <meta name="og:type" content="website" />
  <meta name="og:site_name" content={APP_NAME} />
  <meta name="og:url" content={url} />
  <meta name="og:title" content={title} />
  <meta name="og:description" content={description} />
</head>
